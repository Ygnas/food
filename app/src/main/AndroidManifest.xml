<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Food"
        tools:targetApi="31">
        <activity
            android:name=".views.camera.CameraPresenter"
            android:exported="false" />
        <activity
            android:name=".views.camera.CameraView"
            android:exported="false" />
        <activity
            android:name=".views.account.AccountView"
            android:exported="false"
            android:label="@string/title_account"
            android:theme="@style/Theme.Food" />
        <activity
            android:name=".views.account.RegisterView"
            android:exported="false"
            android:theme="@style/Theme.Food" />
        <activity
            android:name=".views.account.LoginView"
            android:exported="false"
            android:theme="@style/Theme.Food" />
        <activity
            android:name=".views.gallery.GalleryPresenter"
            android:exported="false" />
        <activity
            android:name=".views.gallery.GalleryView"
            android:exported="false"
            android:label="@string/title_activity_gallery"
            android:theme="@style/Theme.Food" />
        <activity
            android:name=".activities.FoodMapsActivity"
            android:exported="false"
            android:label="@string/title_activity_food_maps"
            android:theme="@style/Theme.Food">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".views.editlocation.EditLocationView"
            android:exported="false"
            android:label="@string/title_activity_map" />
        <activity
            android:name=".views.foodlist.FoodListView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".views.food.FoodView"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>